<UserControl x:Class="BrowserSelector.Pages.RulesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#FAFAFA">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="40,32,40,32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0"
                   Text="Manage Rules"
                   Style="{StaticResource Title3TextStyle}"
                   Margin="0,0,0,24"/>

        <!-- Tab Control -->
        <TabControl x:Name="RulesTabControl"
                    Grid.Row="1"
                    Style="{StaticResource TabControlStyle}">

            <!-- Individual Rules Tab -->
            <TabItem x:Name="IndividualRulesTab"
                     Style="{StaticResource TabItemStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Individual Rules"
                                Margin="0,0,6,0"/>

                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                MinWidth="20"
                                HorizontalAlignment="Center">
                            <TextBlock Text="12"
                                    FontSize="12"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Action Bar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,16">
                        <Button Content="Clear Rules"
                                Style="{StaticResource DangerButtonStyle}"
                                Margin="0,0,15,0"
                                Click="ClearIndividualRules_Click"/>
                        <Button Content="+ Add Rule"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="AddRule_Click"/>
                    </StackPanel>

                    <!-- Rules DataGrid -->
                    <Border Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardStrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <DataGrid x:Name="RulesDataGrid"
                                  Style="{StaticResource DataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  IsReadOnly="True"
                                  BorderThickness="0"
                                  CanUserResizeColumns="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  MouseDoubleClick="RulesDataGrid_MouseDoubleClick" SelectionChanged="RulesDataGrid_SelectionChanged">
                            <DataGrid.Columns>
                                <!-- Enable/Disable Toggle -->
                                <DataGridTemplateColumn Header="" Width="64" CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton Style="{StaticResource ToggleSwitchStyle}"
                                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                          Click="RuleEnabled_Click"
                                                          Tag="{Binding Id}"
                                                          HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="URL Pattern" Binding="{Binding Pattern}" Width="*" MinWidth="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Browser" Binding="{Binding BrowserName}" Width="200" MinWidth="200"/>
                                <DataGridTextColumn Header="Profile" Binding="{Binding ProfileName}" Width="150" MinWidth="150"/>
                                <DataGridTemplateColumn Header="" Width="120" CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" UseLayoutRounding="True" SnapsToDevicePixels="True">
                                                <Button Style="{StaticResource IconButtonOrangeStyle}" ToolTip="Move to Group" Tag="{Binding Id}" Click="MoveRuleToGroup_Click">
                                                    <TextBlock Text="&#xE8A7;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButtonBlueStyle}" ToolTip="Edit" Tag="{Binding Id}" Margin="4,0,0,0" Click="EditRule_Click">
                                                    <TextBlock Text="&#xE70F;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButtonRedStyle}" ToolTip="Delete" Tag="{Binding Id}" Margin="4,0,0,0" Click="DeleteRule_Click">
                                                    <TextBlock Text="&#xE74D;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Empty state for rules -->
                    <Border x:Name="RulesEmptyState"
                            Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardStrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="32"
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="No URL Rules"
                                       Style="{StaticResource Subtitle2TextStyle}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Click '+ Add Rule' to create your first URL rule"
                                       Style="{StaticResource CaptionTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- URL Groups Tab -->
           <TabItem x:Name="UrlGroupsTab" 
            Style="{StaticResource TabItemStyle}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="URL Groups"
                                Margin="0,0,6,0"/>

                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                MinWidth="20"
                                HorizontalAlignment="Center">
                            <TextBlock Text="12"
                                    FontSize="12"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Action Bar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,16">
                        <Button Content="Clear Groups"
                                Style="{StaticResource DangerButtonStyle}"
                                Margin="0,0,15,0"
                                Click="ClearUrlGroups_Click"/>
                        <Button Content="+ Add Group"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="AddGroup_Click"/>
                    </StackPanel>

                    <!-- URL Groups ScrollViewer -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="UrlGroupsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <!-- Dim disabled groups -->
                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <!-- Accordion Header -->
                                            <ToggleButton x:Name="GroupExpander">
                                                <ToggleButton.Style>
                                                    <Style TargetType="ToggleButton">
                                                        <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource CardStrokeBrush}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="ToggleButton">
                                                                    <Border x:Name="Border"
                                                                            Background="{TemplateBinding Background}"
                                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                                            CornerRadius="4"
                                                                            Padding="16,12">
                                                                        <ContentPresenter/>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource NavigationItemHoverBrush}"/>
                                                                        </Trigger>
                                                                        <Trigger Property="IsChecked" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="{StaticResource AttentionBackgroundBrush}"/>
                                                                            <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource AccentLight2Brush}"/>
                                                                            <Setter TargetName="Border" Property="CornerRadius" Value="4,4,0,0"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ToggleButton.Style>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Expand Arrow -->
                                                    <Path Grid.Column="0"
                                                          Data="{StaticResource ChevronRightIcon}"
                                                          Stroke="{StaticResource TextSecondaryBrush}"
                                                          StrokeThickness="1.5"
                                                          Width="12" Height="12"
                                                          Stretch="Uniform"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,12,0"
                                                          RenderTransformOrigin="0.5,0.5">
                                                        <Path.Style>
                                                            <Style TargetType="Path">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsChecked, ElementName=GroupExpander}" Value="True">
                                                                        <Setter Property="RenderTransform">
                                                                            <Setter.Value>
                                                                                <RotateTransform Angle="90"/>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Path.Style>
                                                    </Path>

                                                    <!-- Name and Badges -->
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   Style="{StaticResource BodyStrongTextStyle}"/>
                                                        <Border Style="{StaticResource BadgeStyle}"
                                                                Margin="8,0,0,0"
                                                                Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}">
                                                            <TextBlock Text="Built-in" Style="{StaticResource BadgeTextStyle}"/>
                                                        </Border>
                                                        <TextBlock Text="{Binding PatternCount, StringFormat=' ({0} URLs)'}"
                                                                   Style="{StaticResource CaptionTextStyle}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="8,0,0,0"/>
                                                    </StackPanel>

                                                    <!-- Enable Toggle -->
                                                    <ToggleButton Grid.Column="2"
                                                                  Style="{StaticResource ToggleSwitchStyle}"
                                                                  IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                                  Click="UrlGroupEnabled_Click"
                                                                  Tag="{Binding Id}"
                                                                  Margin="0,0,16,0"/>

                                                    <!-- Edit Button -->
                                                    <Button Grid.Column="3" Style="{StaticResource IconButtonBlueStyle}" ToolTip="Edit" Tag="{Binding Id}" Margin="0,0,4,0" Click="EditUrlGroup_Click">
                                                        <TextBlock Text="&#xE70F;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                    </Button>

                                                    <!-- Delete Button -->
                                                    <Button Grid.Column="4" Style="{StaticResource IconButtonRedStyle}" ToolTip="Delete" Tag="{Binding Id}" Click="DeleteUrlGroup_Click">
                                                        <TextBlock Text="&#xE74D;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                    </Button>
                                                </Grid>
                                            </ToggleButton>

                                            <!-- Accordion Content (URL patterns) -->
                                            <Border Background="{StaticResource CardBackgroundBrush}"
                                                    BorderBrush="{StaticResource CardStrokeBrush}"
                                                    BorderThickness="1,0,1,1"
                                                    CornerRadius="0,0,4,4"
                                                    Visibility="{Binding IsChecked, ElementName=GroupExpander, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <StackPanel>
                                                    <!-- URL Patterns DataGrid -->
                                                    <DataGrid ItemsSource="{Binding UrlPatternsIndexed}"
                                                              Style="{StaticResource DataGridStyle}"
                                                              ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                                              CellStyle="{StaticResource DataGridCellStyle}"
                                                              RowStyle="{StaticResource DataGridRowStyle}"
                                                              IsReadOnly="True"
                                                              BorderThickness="0"
                                                              PreviewMouseWheel="DataGrid_PreviewMouseWheel">
                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Header="URL Pattern" Binding="{Binding Pattern}" Width="*">
                                                                <DataGridTextColumn.ElementStyle>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                                    </Style>
                                                                </DataGridTextColumn.ElementStyle>
                                                            </DataGridTextColumn>
                                                            <DataGridTemplateColumn Header="" Width="40">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <Button Style="{StaticResource IconButtonBlueStyle}" ToolTip="Move to Individual Rule" Tag="{Binding}" HorizontalAlignment="Center" Click="MovePatternToIndividualRule_Click">
                                                                            <TextBlock Text="&#xE8A7;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                                        </Button>
                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>
                                                        </DataGrid.Columns>
                                                    </DataGrid>

                                                    <!-- Mode and Profile Info -->
                                                    <Border Background="{StaticResource SuccessBackgroundBrush}"
                                                            CornerRadius="0,0,4,4"
                                                            Padding="16,8">
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="{Binding ModeDisplay}"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{StaticResource SuccessBrush}"/>
                                                            <TextBlock Text=" â€¢ "
                                                                       Foreground="{StaticResource SuccessBrush}"/>
                                                            <TextBlock Text="{Binding ProfileCountDisplay}"
                                                                       Foreground="{StaticResource SuccessBrush}"/>
                                                        </StackPanel>
                                                    </Border>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty state for URL Groups -->
                    <Border x:Name="UrlGroupsEmptyState"
                            Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardStrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="32"
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="No URL Groups"
                                       Style="{StaticResource Subtitle2TextStyle}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Click '+ Add Group' to create a URL group for organizing multiple URLs"
                                       Style="{StaticResource CaptionTextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
