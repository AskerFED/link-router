<UserControl x:Class="BrowserSelector.Pages.RulesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#FAFAFA">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Dropdown Item Style for Move to Group popup -->
            <Style x:Key="DropdownItemStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#333"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Background="{TemplateBinding Background}"
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="40,32,40,32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0"
                   Text="Manage Rules"
                   Style="{StaticResource Title3TextStyle}"
                   Margin="0,0,0,16"/>

        <!-- Pattern Tester (hidden for now) -->
        <Border Grid.Row="1"
                Background="{StaticResource CardBackgroundBrush}"
                BorderBrush="{StaticResource CardStrokeBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="16,12"
                Margin="0,0,0,16"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Test URL"
                           Style="{StaticResource BodyStrongTextStyle}"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <Border Grid.Column="1"
                        Background="White"
                        BorderBrush="{StaticResource CardStrokeBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <TextBox x:Name="TestUrlTextBox"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalContentAlignment="Center"
                             Height="32"
                             FontSize="13"
                             KeyDown="TestUrlTextBox_KeyDown"/>
                </Border>

                <Button Grid.Column="2"
                        Content="Test"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="12,0,0,0"
                        Click="TestUrl_Click"/>

                <StackPanel x:Name="TestResultPanel"
                            Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            Margin="16,0,0,0"
                            Visibility="Collapsed">
                    <TextBlock x:Name="TestResultIcon"
                               FontFamily="{StaticResource SegoeFluentIcons}"
                               FontSize="14"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <TextBlock x:Name="TestResultText"
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tab Control -->
        <TabControl x:Name="RulesTabControl"
                    Grid.Row="2"
                    Style="{StaticResource TabControlStyle}">

            <!-- Individual Rules Tab -->
            <TabItem x:Name="IndividualRulesTab"
                     Style="{StaticResource TabItemStyle}">
                <TabItem.Header>
                        <Border Background="Transparent"
            Padding="0"
            SnapsToDevicePixels="True">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Individual Rules"
                                Margin="0,0,6,0"/>

                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                MinWidth="20"
                                HorizontalAlignment="Center">
                            <TextBlock x:Name="RulesCountBadge"
                                    Text="0"
                                    FontSize="12"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                                            </Border>

                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Action Bar with Search -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Border Grid.Column="0"
                                Background="White"
                                BorderBrush="{StaticResource CardStrokeBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Width="250"
                                HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE721;"
                                           FontFamily="{StaticResource SegoeFluentIcons}"
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="10,0,8,0"/>
                                <Grid Grid.Column="1">
                                    <TextBox x:Name="RulesSearchBox"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             VerticalContentAlignment="Center"
                                             Height="32"
                                             FontSize="13"
                                             TextChanged="RulesSearchBox_TextChanged"/>
                                    <TextBlock Text="Search"
                                               FontSize="13"
                                               Foreground="{StaticResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=RulesSearchBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <!-- Clear Button -->
                                <Button Grid.Column="2"
                                        Click="ClearRulesSearch_Click"
                                        VerticalAlignment="Center"
                                        Margin="0,0,6,0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=RulesSearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock Text="&#xE711;"
                                               FontFamily="{StaticResource SegoeFluentIcons}"
                                               FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Clear All Rules"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Margin="0,0,15,0"
                                    Click="ClearIndividualRules_Click"/>
                            <Button Content="+ Add Rule"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="AddRule_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Rules DataGrid -->
                    <Border Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardStrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            MaxHeight="400">
                        <DataGrid x:Name="RulesDataGrid"
                                  Style="{StaticResource DataGridStyle}"
                                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                  CellStyle="{StaticResource DataGridCellStyle}"
                                  RowStyle="{StaticResource DataGridRowStyle}"
                                  IsReadOnly="True"
                                  BorderThickness="0"
                                  CanUserResizeColumns="True"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                  MouseLeftButtonUp="RulesDataGrid_MouseDoubleClick">
                            <DataGrid.Columns>
                                <!-- Enable/Disable Toggle -->
                                <DataGridTemplateColumn Header="" Width="64" CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ToggleButton Style="{StaticResource ToggleSwitchStyle}"
                                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                          Click="RuleEnabled_Click"
                                                          Tag="{Binding Id}"
                                                          HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="URL Pattern" Binding="{Binding Pattern}" Width="*" MinWidth="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Browser Profiles" Width="280" MinWidth="200">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <!-- Browser Icons -->
                                                <ItemsControl ItemsSource="{Binding Profiles}" VerticalAlignment="Center">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Width="16" Height="16" Margin="0,0,4,0"
                                                                  VerticalAlignment="Center"
                                                                  ToolTip="{Binding BrowserName}">
                                                                <Image Source="{Binding BrowserPath, Converter={StaticResource BrowserPathToIconConverter}}"
                                                                       Width="16" Height="16"
                                                                       RenderOptions.BitmapScalingMode="HighQuality">
                                                                    <Image.Style>
                                                                        <Style TargetType="Image">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding BrowserPath, Converter={StaticResource BrowserPathToIconConverter}}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                                <Ellipse Width="14" Height="14"
                                                                         Fill="{Binding BrowserName, Converter={StaticResource BrowserNameToColorConverter}}">
                                                                    <Ellipse.Style>
                                                                        <Style TargetType="Ellipse">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding BrowserPath, Converter={StaticResource BrowserPathToIconConverter}}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Ellipse.Style>
                                                                </Ellipse>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                                <!-- Profile Display Text -->
                                                <TextBlock Text="{Binding ProfilesDisplay}"
                                                           VerticalAlignment="Center"
                                                           Margin="4,0,0,0"
                                                           TextTrimming="CharacterEllipsis"
                                                           ToolTip="{Binding ProfilesDisplay}"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <!-- Updated Date Column -->
                                <DataGridTextColumn Header="Updated" Binding="{Binding ModifiedDateDisplay}" Width="100" MinWidth="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Setter Property="Foreground" Value="#666"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="" Width="120" CanUserResize="False">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" UseLayoutRounding="True" SnapsToDevicePixels="True">
                                                <Button Style="{StaticResource IconButtonOrangeStyle}" ToolTip="Move to Group" Tag="{Binding Id}" Click="MoveRuleToGroup_Click">
                                                    <TextBlock Text="&#xE8A7;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButtonBlueStyle}" ToolTip="Edit" Tag="{Binding Id}" Margin="4,0,0,0" Click="EditRule_Click">
                                                    <TextBlock Text="&#xE70F;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButtonRedStyle}" ToolTip="Delete" Tag="{Binding Id}" Margin="4,0,0,0" Click="DeleteRule_Click">
                                                    <TextBlock Text="&#xE74D;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                                </Button>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Move to Group Dropdown Popup -->
                    <Popup x:Name="MoveToGroupPopup"
                           Placement="Bottom"
                           StaysOpen="False"
                           AllowsTransparency="True">
                        <Border Background="White"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="4"
                                MinWidth="200"
                                MaxHeight="300">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.15" BlurRadius="12" ShadowDepth="4"/>
                            </Border.Effect>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="280">
                                <ItemsControl x:Name="GroupSelectionList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Style="{StaticResource DropdownItemStyle}"
                                                    Content="{Binding Name}"
                                                    Tag="{Binding Id}"
                                                    Click="GroupSelectionItem_Click"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                    </Popup>

                    <!-- Empty state for rules -->
                    <Border x:Name="RulesEmptyState"
                            Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardStrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="48"
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Icon -->
                            <TextBlock Text="&#xE8A5;"
                                       FontFamily="{StaticResource SegoeFluentIcons}"
                                       FontSize="48"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <!-- Title -->
                            <TextBlock Text="No URL Rules"
                                       Style="{StaticResource Subtitle2TextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0"/>
                            <!-- Description -->
                            <TextBlock Text="Create rules to automatically open URLs in specific browsers"
                                       Style="{StaticResource CaptionTextStyle}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       MaxWidth="300"
                                       Margin="0,8,0,0"/>
                            <!-- CTA Button -->
                            <Button Content="+ Create First Rule"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,20,0,0"
                                    Click="AddRule_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- URL Groups Tab -->
           <TabItem x:Name="UrlGroupsTab" 
            Style="{StaticResource TabItemStyle}">
                <TabItem.Header>
                        <Border Background="Transparent"
            Padding="0"
            SnapsToDevicePixels="True">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="URL Groups"
                                Margin="0,0,6,0"/>

                        <Border Background="{StaticResource AccentBrush}"
                                CornerRadius="10"
                                Padding="6,2"
                                MinWidth="20"
                                HorizontalAlignment="Center">
                            <TextBlock x:Name="GroupsCountBadge"
                                    Text="0"
                                    FontSize="12"
                                    Foreground="White"
                                    HorizontalAlignment="Center"
                                    TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                                            </Border>

                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Action Bar with Search -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Box -->
                        <Border Grid.Column="0"
                                Background="White"
                                BorderBrush="{StaticResource CardStrokeBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Width="250"
                                HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE721;"
                                           FontFamily="{StaticResource SegoeFluentIcons}"
                                           FontSize="14"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="10,0,8,0"/>
                                <Grid Grid.Column="1">
                                    <TextBox x:Name="GroupsSearchBox"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             VerticalContentAlignment="Center"
                                             Height="32"
                                             FontSize="13"
                                             TextChanged="GroupsSearchBox_TextChanged"/>
                                    <TextBlock Text="Search"
                                               FontSize="13"
                                               Foreground="{StaticResource TextTertiaryBrush}"
                                               VerticalAlignment="Center"
                                               Margin="2,0,0,0"
                                               IsHitTestVisible="False">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Text, ElementName=GroupsSearchBox}" Value="">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <!-- Clear Button -->
                                <Button Grid.Column="2"
                                        Click="ClearGroupsSearch_Click"
                                        VerticalAlignment="Center"
                                        Margin="0,0,6,0"
                                        Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Setter Property="Padding" Value="4"/>
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#E8E8E8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=GroupsSearchBox}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <TextBlock Text="&#xE711;"
                                               FontFamily="{StaticResource SegoeFluentIcons}"
                                               FontSize="10"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <Button Content="Clear All Groups"
                                    Style="{StaticResource DangerButtonStyle}"
                                    Margin="0,0,15,0"
                                    Click="ClearUrlGroups_Click"/>
                            <Button Content="+ Add Group"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Click="AddGroup_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- URL Groups ScrollViewer -->
                    <ScrollViewer Grid.Row="1"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  MaxHeight="400">
                        <ItemsControl x:Name="UrlGroupsItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,8"
                                            Background="{StaticResource CardBackgroundBrush}"
                                            BorderBrush="{StaticResource CardStrokeBrush}"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            Padding="16,12"
                                            Cursor="Hand"
                                            Tag="{Binding Id}"
                                            MouseLeftButtonUp="UrlGroupCard_Click">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <!-- Dim disabled groups -->
                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Name and Info -->
                                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}"
                                                           Style="{StaticResource BodyStrongTextStyle}"/>
                                                <TextBlock Text="{Binding PatternCount, StringFormat=' ({0} URLs)'}"
                                                           Style="{StaticResource CaptionTextStyle}"
                                                           VerticalAlignment="Center"
                                                           Margin="8,0,0,0"/>
                                                <TextBlock Text=" · "
                                                           FontSize="11"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="4,0,0,0"/>
                                                <TextBlock Text="{Binding ModeDisplay}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text=" · "
                                                           FontSize="11"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           VerticalAlignment="Center"/>
                                                <TextBlock Text="{Binding ProfileCountDisplay}"
                                                           FontSize="11"
                                                           Foreground="{StaticResource SuccessBrush}"
                                                           VerticalAlignment="Center"/>
                                                <!-- Browser Icons -->
                                                <ItemsControl ItemsSource="{Binding Profiles}" Margin="8,0,8,0" VerticalAlignment="Center">
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <StackPanel Orientation="Horizontal"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Width="16" Height="16" Margin="2,0,0,0" VerticalAlignment="Center" ToolTip="{Binding BrowserName}">
                                                                <Image Source="{Binding BrowserPath, Converter={StaticResource BrowserPathToIconConverter}}"
                                                                       Width="16" Height="16"
                                                                       RenderOptions.BitmapScalingMode="HighQuality">
                                                                    <Image.Style>
                                                                        <Style TargetType="Image">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding BrowserPath, Converter={StaticResource BrowserPathToIconConverter}}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Image.Style>
                                                                </Image>
                                                                <Ellipse Width="12" Height="12" Fill="{Binding BrowserName, Converter={StaticResource BrowserNameToColorConverter}}">
                                                                    <Ellipse.Style>
                                                                        <Style TargetType="Ellipse">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding BrowserPath, Converter={StaticResource BrowserPathToIconConverter}}" Value="{x:Null}">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Ellipse.Style>
                                                                </Ellipse>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>

                                            <!-- Built-in Badge (right side of title) -->
                                            <Border Grid.Column="1"
                                                    Style="{StaticResource BadgeStyle}"
                                                    Margin="0,0,12,0"
                                                    VerticalAlignment="Center"
                                                    Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="Built-in" Style="{StaticResource BadgeTextStyle}"/>
                                            </Border>

                                            <!-- Enable Toggle -->
                                            <ToggleButton Grid.Column="2"
                                                          Style="{StaticResource ToggleSwitchStyle}"
                                                          IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                          Click="UrlGroupEnabled_Click"
                                                          Tag="{Binding Id}"
                                                          Margin="0,0,16,0"/>

                                            <!-- Edit Button -->
                                            <Button Grid.Column="3" Style="{StaticResource IconButtonBlueStyle}" ToolTip="Edit" Tag="{Binding Id}" Margin="0,0,4,0" Click="EditUrlGroup_Click">
                                                <TextBlock Text="&#xE70F;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                            </Button>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="4" Tag="{Binding Id}" Click="DeleteUrlGroup_Click">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource IconButtonRedStyle}">
                                                        <Setter Property="IsEnabled" Value="True"/>
                                                        <Setter Property="ToolTip" Value="Delete"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsBuiltIn}" Value="True">
                                                                <Setter Property="IsEnabled" Value="False"/>
                                                                <Setter Property="ToolTip" Value="Built-in groups can't be deleted"/>
                                                                <Setter Property="Opacity" Value="0.4"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                                <TextBlock Text="&#xE74D;" FontFamily="{StaticResource SegoeFluentIcons}" FontSize="14" Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" UseLayoutRounding="True" SnapsToDevicePixels="True"/>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty state for URL Groups -->
                    <Border x:Name="UrlGroupsEmptyState"
                            Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardStrokeBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="48"
                            Visibility="Collapsed">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Icon -->
                            <TextBlock Text="&#xE8F1;"
                                       FontFamily="{StaticResource SegoeFluentIcons}"
                                       FontSize="48"
                                       Foreground="{StaticResource TextTertiaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <!-- Title -->
                            <TextBlock Text="No URL Groups"
                                       Style="{StaticResource Subtitle2TextStyle}"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0"/>
                            <!-- Description -->
                            <TextBlock Text="Group multiple URLs together to open them in the same browser"
                                       Style="{StaticResource CaptionTextStyle}"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       MaxWidth="300"
                                       Margin="0,8,0,0"/>
                            <!-- CTA Button -->
                            <Button Content="+ Create First Group"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="0,20,0,0"
                                    Click="AddGroup_Click"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
