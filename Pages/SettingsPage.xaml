<UserControl x:Class="BrowserSelector.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:BrowserSelector.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FAFAFA">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="40,32,40,32" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Settings"
                       Style="{StaticResource Title2TextStyle}"
                       Margin="0,0,0,24"/>

            <!-- APP REGISTRATION Section -->
            <TextBlock Text="APP REGISTRATION"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <!-- Registration Status Card -->
            <Border Style="{StaticResource SettingsCardStyle}" Padding="16">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Status Icon -->
                        <Border x:Name="StatusIconBorder"
                                Grid.Column="0"
                                Width="36" Height="36"
                                Background="#DFF6DD"
                                CornerRadius="4"
                                Margin="0,0,16,0">
                            <Path x:Name="StatusIcon"
                                  Data="{StaticResource CheckIcon}"
                                  Stroke="#107C10"
                                  StrokeThickness="2"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>

                        <!-- Status Text -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="RegistrationStatusText"
                                       Text="Registered"
                                       Style="{StaticResource BodyStrongTextStyle}"/>
                            <TextBlock x:Name="RegistrationDetailText"
                                       Text="LinkRouter is registered and ready to use."
                                       Style="{StaticResource CaptionTextStyle}"
                                       TextWrapping="Wrap"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                        <Button x:Name="RegisterButton"
                                Content="Register"
                                Style="{StaticResource SuccessButtonStyle}"
                                Click="RegisterButton_Click"
                                Width="120"
                                Margin="0,0,12,0"/>
                        <Button x:Name="UnregisterButton"
                                Content="Unregister"
                                Style="{StaticResource DangerButtonStyle}"
                                Click="UnregisterButton_Click"
                                Width="120"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- HOW TO SET AS DEFAULT Section -->
            <TextBlock Text="HOW TO SET AS DEFAULT"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Border Style="{StaticResource InfoBannerStyle}">
                <StackPanel>
                    <TextBlock Text="After registering LinkRouter:"
                               Style="{StaticResource BodyStrongTextStyle}"
                               Foreground="{StaticResource AccentBrush}"
                               Margin="0,0,0,12"/>
                    <StackPanel Margin="8,0,0,0">
                        <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4">
                            <Run FontWeight="SemiBold">1.</Run>
                            <Run>Open Windows Settings</Run>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4">
                            <Run FontWeight="SemiBold">2.</Run>
                            <Run>Go to Apps > Default apps</Run>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4">
                            <Run FontWeight="SemiBold">3.</Run>
                            <Run>Search for 'LinkRouter'</Run>
                        </TextBlock>
                        <TextBlock Style="{StaticResource BodyTextStyle}">
                            <Run FontWeight="SemiBold">4.</Run>
                            <Run>Set it as default for HTTP and HTTPS links</Run>
                        </TextBlock>
                    </StackPanel>
                    <Button Content="Open Windows Settings"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="OpenWindowsSettings_Click"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Left"/>
                </StackPanel>
            </Border>

            <!-- ABOUT Section -->
            <TextBlock Text="ABOUT"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <controls:SettingsCard Header="LinkRouter"
                                   Description="Browser selection and URL routing utility">
                <controls:SettingsCard.Icon>
                    <Border Width="18" Height="18" Background="#0078D4" CornerRadius="4">
                        <Path Data="{StaticResource BrowserIcon}"
                              Stroke="White"
                              StrokeThickness="1"
                              Width="12" Height="12"
                              Stretch="Uniform"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                    </Border>
                </controls:SettingsCard.Icon>
                <controls:SettingsCard.ActionContent>
                    <TextBlock Text="v1.0.0"
                               Style="{StaticResource CaptionTextStyle}"/>
                </controls:SettingsCard.ActionContent>
            </controls:SettingsCard>

            <Border Style="{StaticResource SettingsCardStyle}" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Framework" Style="{StaticResource BodyTextStyle}"/>
                        <TextBlock Text="Application runtime information"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <TextBlock x:Name="FrameworkText"
                               Grid.Column="1"
                               Text=".NET 8.0"
                               Style="{StaticResource CaptionTextStyle}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="Platform" Style="{StaticResource BodyTextStyle}"/>
                        <TextBlock Text="Operating system"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <TextBlock x:Name="PlatformText"
                               Grid.Column="1"
                               Text="Windows 11"
                               Style="{StaticResource CaptionTextStyle}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
