<UserControl x:Class="BrowserSelector.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:BrowserSelector.Controls"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FAFAFA">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24,32,40,32" MaxWidth="800">

            <!-- Page Title -->
            <TextBlock Text="Settings"
                       Style="{StaticResource Title3TextStyle}"
                       Margin="0,0,0,16"/>

            <!-- Default Browser Registration Section -->
            <TextBlock Text="Default Browser Registration"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Border Style="{StaticResource InfoBannerStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left content -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Set LinkRouter as your default browser:"
                                   Style="{StaticResource BodyStrongTextStyle}"
                                   Foreground="{StaticResource AccentBrush}"
                                   Margin="0,0,0,12"/>
                        <StackPanel Margin="8,0,0,0">
                            <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4">
                                <Run FontWeight="SemiBold">1.</Run>
                                <Run>Open Windows Settings</Run>
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4">
                                <Run FontWeight="SemiBold">2.</Run>
                                <Run>Go to Apps > Default apps</Run>
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyTextStyle}" Margin="0,0,0,4">
                                <Run FontWeight="SemiBold">3.</Run>
                                <Run>Search for 'LinkRouter'</Run>
                            </TextBlock>
                            <TextBlock Style="{StaticResource BodyTextStyle}">
                                <Run FontWeight="SemiBold">4.</Run>
                                <Run>Set it as default for HTTP and HTTPS links</Run>
                            </TextBlock>
                        </StackPanel>
                        <Button Content="Open Windows Settings"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="OpenWindowsSettings_Click"
                                Margin="0,16,0,0"
                                HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Status Badge (right top corner) -->
                    <Border x:Name="RegistrationStatusBorder" Grid.Column="1"
                            Padding="14,8" CornerRadius="6"
                            VerticalAlignment="Top" HorizontalAlignment="Right">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Margin="0,0,8,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock x:Name="StatusText" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Rules Processing Section -->
            <TextBlock Text="Rules Processing"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Border Style="{StaticResource SettingsCardStyle}" Padding="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0" Width="36" Height="36" Background="#E3F2FD" CornerRadius="4" Margin="0,0,16,0">
                        <TextBlock Text="&#xE8FD;"
                                   FontFamily="{StaticResource SegoeFluentIcons}"
                                   FontSize="18"
                                   Foreground="#1976D2"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Text -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Enable Rules Processing" Style="{StaticResource BodyStrongTextStyle}"/>
                        <TextBlock Text="When disabled, all URLs open in the fallback browser"
                                   Style="{StaticResource CaptionTextStyle}"
                                   Margin="0,2,0,0"/>
                    </StackPanel>

                    <!-- Toggle -->
                    <ToggleButton x:Name="RulesEnabledToggle"
                                  Grid.Column="2"
                                  Style="{StaticResource ToggleSwitchStyle}"
                                  VerticalAlignment="Center"
                                  Checked="RulesEnabledToggle_Changed"
                                  Unchecked="RulesEnabledToggle_Changed"/>
                </Grid>
            </Border>

            <!-- Backup & Restore Section -->
            <TextBlock Text="Backup &amp; Restore"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <Border Style="{StaticResource SettingsCardStyle}" Padding="16">
                <StackPanel>
                    <TextBlock Text="Export your rules, groups, and settings to a backup file, or restore from a previous backup."
                               Style="{StaticResource BodyTextStyle}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="ExportDataButton"
                                Content="Export"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Click="ExportData_Click"
                                Width="140"
                                Margin="0,0,12,0"/>
                        <Button x:Name="ImportDataButton"
                                Content="Import"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="ImportData_Click"
                                Width="140"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- About Section -->
            <TextBlock Text="About"
                       Style="{StaticResource SectionHeaderStyle}"/>

            <controls:SettingsCard Header="LinkRouter"
                                   Description="Browser selection and URL routing utility">
                <controls:SettingsCard.Icon>
                    <Border Width="18" Height="18" Background="#0078D4" CornerRadius="4">
                        <TextBlock Text="&#xE774;"
                                   FontFamily="{StaticResource SegoeFluentIcons}"
                                   FontSize="12"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </controls:SettingsCard.Icon>
                <controls:SettingsCard.ActionContent>
                    <TextBlock Text="v1.0.0"
                               Style="{StaticResource CaptionTextStyle}"/>
                </controls:SettingsCard.ActionContent>
            </controls:SettingsCard>

        </StackPanel>
    </ScrollViewer>
</UserControl>
