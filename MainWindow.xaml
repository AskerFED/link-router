<Window x:Class="BrowserSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LinkRouter"
        Height="380"
        Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FAFAFA"
        Topmost="True"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="#FFFFFF"
            BorderBrush="#E4E4E4"
            BorderThickness="1"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.2"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0"
                    Background="#F3F3F3"
                    CornerRadius="8,8,0,0"
                    Padding="16,12"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App Icon -->
                    <Border Grid.Column="0"
                            Width="24" Height="24"
                            Background="#0078D4"
                            CornerRadius="4"
                            Margin="0,0,12,0">
                        <TextBlock Text="&#xE774;"
                                   FontFamily="{StaticResource SegoeFluentIcons}"
                                   FontSize="14"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Grid.Column="1"
                               Text="LinkRouter"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#1A1A1A"
                               VerticalAlignment="Center"/>

                    <!-- Close Button -->
                    <Button Grid.Column="2"
                            Width="32" Height="32"
                            Click="CancelButton_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="4">
                                                <TextBlock Text="&#xE711;"
                                                           FontFamily="{StaticResource SegoeFluentIcons}"
                                                           FontSize="10"
                                                           Foreground="#8A8A8A"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#FDE7E9"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1" Margin="24,20,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- URL Display -->
                <Border Grid.Row="0"
                        Background="#F6F6F6"
                        BorderBrush="#E4E4E4"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="URL"
                                   Style="{StaticResource CaptionStrongTextStyle}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,12,0"/>
                        <TextBox Grid.Column="1"
                                 x:Name="UrlTextBox"
                                 IsReadOnly="True"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 TextWrapping="Wrap"
                                 MaxHeight="48"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="12"
                                 Foreground="#5D5D5D"
                                 FontFamily="Consolas, Courier New"/>
                    </Grid>
                </Border>

                <!-- Browser Label -->
                <TextBlock Grid.Row="1"
                           Text="Browser"
                           Style="{StaticResource CaptionStrongTextStyle}"
                           Margin="0,0,0,6"/>

                <!-- Browser Combo -->
                <ComboBox Grid.Row="2"
                          x:Name="BrowserComboBox"
                          Style="{StaticResource ComboBoxStyle}"
                          Margin="0,0,0,16"
                          SelectionChanged="BrowserComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Grid Width="16" Height="16" Margin="0,0,8,0" VerticalAlignment="Center">
                                    <Image Source="{Binding Icon}" Width="16" Height="16"
                                           Visibility="{Binding Icon, Converter={StaticResource NullToCollapsedConverter}}"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <Ellipse Width="14" Height="14" Fill="{Binding Color}"
                                             Visibility="{Binding Icon, Converter={StaticResource NullToVisibleConverter}}"/>
                                </Grid>
                                <TextBlock Text="{Binding Name}" Padding="0,2" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Profile Label -->
                <TextBlock Grid.Row="3"
                           Text="Profile"
                           Style="{StaticResource CaptionStrongTextStyle}"
                           Margin="0,0,0,6"/>

                <!-- Profile Combo -->
                <ComboBox Grid.Row="4"
                          x:Name="ProfileComboBox"
                          Style="{StaticResource ComboBoxStyle}"
                          Margin="0,0,0,16"
                          SelectionChanged="ProfileComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Padding="4,2"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Save Rule Checkbox -->
                <CheckBox Grid.Row="5"
                          x:Name="OpenUrlCheckBox"
                          Content="Save as rule for this URL"
                          VerticalAlignment="Top"
                          FontSize="13"
                          Foreground="#5D5D5D"
                          Margin="0,0,0,16"/>

                <!-- Action Buttons -->
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Settings Button -->
                    <Button Grid.Column="0"
                            Content="Settings"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="90"
                            Click="SettingsButton_Click"/>

                    <!-- Open Button (Primary) -->
                    <Button Grid.Column="2"
                            x:Name="OpenButton"
                            Content="Open"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="100"
                            Margin="0,0,8,0"
                            Click="OpenButton_Click"/>

                    <!-- Cancel Button -->
                    <Button Grid.Column="3"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Width="90"
                            Click="CancelButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
