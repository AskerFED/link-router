<Window x:Class="BrowserSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Browser and Profile"
        Height="480"
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Topmost="True">

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- URL -->
            <RowDefinition Height="Auto"/>
            <!-- Browser label -->
            <RowDefinition Height="Auto"/>
            <!-- Browser combo -->
            <RowDefinition Height="Auto"/>
            <!-- Profile label -->
            <RowDefinition Height="Auto"/>
            <!-- Profile combo -->
            <RowDefinition Height="Auto"/>
            <!-- Save rule -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- URL Display -->
        <Border Grid.Row="0"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="URL:"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox Grid.Column="1"
                         x:Name="UrlTextBox"
                         IsReadOnly="True"
                         BorderThickness="0"
                         Background="Transparent"
                         TextWrapping="Wrap"
                         VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Browser Label -->
        <TextBlock Grid.Row="1"
                   Text="Select Browser:"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <!-- Browser Combo -->
        <ComboBox Grid.Row="2"
                  x:Name="BrowserComboBox"
                  Height="35"
                  Margin="0,0,0,20"
                  Background="White"
                  BorderBrush="#DDD"
                  SelectionChanged="BrowserComboBox_SelectionChanged"
                  Padding="10,5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"
                               FontSize="13"
                               Padding="5"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Profile Label -->
        <TextBlock Grid.Row="3"
                   Text="Select Profile:"
                   FontWeight="Bold"
                   FontSize="14"
                   Margin="0,0,0,5"/>

        <!-- Profile Combo -->
        <ComboBox Grid.Row="4"
                  x:Name="ProfileComboBox"
                  Height="35"
                  Margin="0,0,0,20"
                  Background="White"
                  BorderBrush="#DDD"
                  Padding="10,5">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="13"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Save Rule Section -->
        <Border Grid.Row="5"
                Background="#FFF9E6"
                BorderBrush="#FFE082"
                BorderThickness="1"
                CornerRadius="4"
                Padding="10"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0"
                          x:Name="SaveRuleCheckBox"
                          Content="Remember this choice for URLs containing:"
                          VerticalAlignment="Center"
                          FontSize="12"
                          Margin="0,0,10,0"/>

                <TextBox Grid.Column="1"
                         x:Name="RulePatternTextBox"
                         VerticalAlignment="Center"
                         Padding="5"
                         FontSize="12"/>

                <Button Grid.Column="2"
                        Content="Manage Rules"
                        Click="ManageRulesButton_Click"
                        Margin="10,0,0,0"
                        Padding="10,5"
                        Background="#E3F2FD"
                        BorderBrush="#90CAF9"
                        BorderThickness="1"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button x:Name="OpenButton"
                    Content="Open"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="OpenButton_Click"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancel"
                    Width="100"
                    Height="35"
                    Click="CancelButton_Click"
                    Background="#E0E0E0"
                    Foreground="#333"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
