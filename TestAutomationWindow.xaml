<Window x:Class="BrowserSelector.TestAutomationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Automation" Height="520" Width="620"
        WindowStartupLocation="CenterOwner"
        Background="#F3F3F3"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Test Automation"
                       Style="{StaticResource Title3TextStyle}"/>
            <TextBlock Text="Run automated tests to verify all features work correctly"
                       Style="{StaticResource CaptionTextStyle}"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Test Results List -->
        <Border Grid.Row="1"
                Background="#FFFFFF"
                BorderBrush="#E4E4E4"
                BorderThickness="1"
                CornerRadius="4">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="TestResultsControl" Margin="12">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8" Padding="14,12" CornerRadius="4">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Passed">
                                                <Setter Property="Background" Value="#DFF6DD"/>
                                                <Setter Property="BorderBrush" Value="#107C10"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                <Setter Property="Background" Value="#FDE7E9"/>
                                                <Setter Property="BorderBrush" Value="#C42B1C"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Running">
                                                <Setter Property="Background" Value="#F0F6FC"/>
                                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                <Setter Property="Background" Value="#F6F6F6"/>
                                                <Setter Property="BorderBrush" Value="#E4E4E4"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="0" FontSize="14" VerticalAlignment="Center" Margin="0,0,14,0" FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Passed">
                                                        <Setter Property="Text" Value="[OK]"/>
                                                        <Setter Property="Foreground" Value="#107C10"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                        <Setter Property="Text" Value="[X]"/>
                                                        <Setter Property="Foreground" Value="#C42B1C"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Running">
                                                        <Setter Property="Text" Value="..."/>
                                                        <Setter Property="Foreground" Value="#0078D4"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Text" Value="[ ]"/>
                                                        <Setter Property="Foreground" Value="#8A8A8A"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Test Name and Message -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}"
                                                   Style="{StaticResource BodyStrongTextStyle}"/>
                                        <TextBlock Text="{Binding Message}"
                                                   Style="{StaticResource CaptionTextStyle}"
                                                   TextWrapping="Wrap"
                                                   Margin="0,2,0,0"
                                                   Visibility="{Binding HasMessage, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>

                                    <!-- Duration -->
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding Duration, StringFormat={}{0}ms}"
                                               Style="{StaticResource CaptionTextStyle}"
                                               VerticalAlignment="Center"
                                               Visibility="{Binding HasDuration, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Summary -->
        <Border Grid.Row="2"
                Background="#FFFFFF"
                BorderBrush="#E4E4E4"
                BorderThickness="1"
                CornerRadius="4"
                Padding="16"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="SummaryText"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Style="{StaticResource BodyStrongTextStyle}"/>
                <TextBlock x:Name="PassedCount"
                           Grid.Column="1"
                           Foreground="#107C10"
                           Margin="0,0,16,0"
                           VerticalAlignment="Center"
                           Style="{StaticResource BodyTextStyle}"/>
                <TextBlock x:Name="FailedCount"
                           Grid.Column="2"
                           Foreground="#C42B1C"
                           Margin="0,0,16,0"
                           VerticalAlignment="Center"
                           Style="{StaticResource BodyTextStyle}"/>
                <TextBlock x:Name="TotalTime"
                           Grid.Column="3"
                           VerticalAlignment="Center"
                           Style="{StaticResource CaptionTextStyle}"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="RunTestsButton"
                    Content="Run All Tests"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="RunTests_Click"
                    Margin="0,0,12,0"
                    Width="120"/>
            <Button Content="Close"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Close_Click"
                    Width="80"/>
        </StackPanel>
    </Grid>
</Window>
