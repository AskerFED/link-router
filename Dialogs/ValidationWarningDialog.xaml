<Window x:Class="BrowserSelector.Dialogs.ValidationWarningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Validation Warnings"
        Height="360" Width="480"
        WindowStartupLocation="CenterOwner"
        Background="#FFFFFF"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Geometry x:Key="WarningIconGeometry">M10,2 L18,16 L2,16 Z M10,7 L10,11 M10,13 L10,14</Geometry>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Header -->
            <RowDefinition Height="*"/>      <!-- Content -->
            <RowDefinition Height="Auto"/>   <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF8E6" Padding="20,16">
            <StackPanel Orientation="Horizontal">
                <Path Data="{StaticResource WarningIconGeometry}"
                      Stroke="#B37400"
                      StrokeThickness="2"
                      Width="24" Height="24"
                      Stretch="Uniform"
                      VerticalAlignment="Center"
                      Margin="0,0,12,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Warning"
                               Style="{StaticResource Subtitle1TextStyle}"
                               Foreground="#8A5A00"/>
                    <TextBlock Text="The following issues were found. Do you want to proceed anyway?"
                               Style="{StaticResource CaptionTextStyle}"
                               Foreground="#8A5A00"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Warning List -->
        <ScrollViewer Grid.Row="1" Padding="20,16" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="WarningsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFF8E6"
                                BorderBrush="#F0A500"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,0,0,8">
                            <StackPanel>
                                <TextBlock Text="{Binding Message}"
                                           FontFamily="Segoe UI"
                                           FontSize="13"
                                           Foreground="#8A5A00"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Details}"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           Foreground="#8A5A00"
                                           Opacity="0.8"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Details}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Details}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="2"
                Background="#F9F9F9"
                BorderBrush="#E4E4E4"
                BorderThickness="0,1,0,0"
                Padding="20,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Width="100"
                        Margin="0,0,12,0"/>
                <Button Content="Save Anyway"
                        Click="Proceed_Click"
                        Style="{StaticResource DangerButtonStyle}"
                        Width="120"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
