<Window x:Class="BrowserSelector.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:pages="clr-namespace:BrowserSelector.Pages"
        mc:Ignorable="d"
        Title="LinkRouter" Height="700" Width="1050"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation Pane -->
        <Border Grid.Column="0"
                Background="#EEEEEE"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- App Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,24,20,20">
                    <Image Source="pack://application:,,,/app.ico"
                           Width="32" Height="32"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="LinkRouter"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#1A1A1A"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Navigation Items -->
                <ListBox x:Name="NavigationList"
                         Grid.Row="1"
                         Style="{StaticResource NavigationListBoxStyle}"
                         SelectionChanged="NavigationList_SelectionChanged"
                         Margin="0,8,0,0">

                    <ListBoxItem x:Name="HomeNavItem" Tag="Home">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE80F;"
                                       FontFamily="{StaticResource SegoeFluentIcons}"
                                       FontSize="18"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                       Width="18" Height="18"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Home"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="RulesNavItem" Tag="Rules">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8FD;"
                                       FontFamily="{StaticResource SegoeFluentIcons}"
                                       FontSize="18"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                       Width="18" Height="18"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Manage Rules"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                            <TextBlock x:Name="RulesCountBadge"
                                       Text="0"
                                       FontSize="11"
                                       Foreground="#5D5D5D"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="SettingsNavItem" Tag="Settings">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE713;"
                                       FontFamily="{StaticResource SegoeFluentIcons}"
                                       FontSize="18"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                       Width="18" Height="18"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Settings"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>

                    <ListBoxItem x:Name="DocsNavItem" Tag="Docs">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE8A5;"
                                       FontFamily="{StaticResource SegoeFluentIcons}"
                                       FontSize="18"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                       Width="18" Height="18"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Documentation"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="12,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>

                <!-- Status Section -->
                <Border Grid.Row="2" Margin="16,8,16,12">
                    <StackPanel>
                        <TextBlock Text="Status" FontSize="11" FontWeight="SemiBold"
                                   Foreground="#666" Margin="0,0,0,8"/>
                        <Border x:Name="StatusIndicatorBorder" Padding="10,8" CornerRadius="6"
                                Background="#DFF6DD">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse x:Name="StatusDot" Width="8" Height="8"
                                         Fill="#107C10" Margin="0,0,10,0"
                                         VerticalAlignment="Center"/>
                                <TextBlock x:Name="StatusText" Text="Active"
                                           FontSize="13" Foreground="#1A1A1A"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Test Button at Bottom -->
                <Border Grid.Row="3" Margin="16,0,16,16">
                    <Button x:Name="TestButton"
                            Click="TestButton_Click"
                            Cursor="Hand"
                            HorizontalAlignment="Stretch">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="Foreground" Value="#E65100"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="#FFCC80"/>
                                <Setter Property="Height" Value="36"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="4"
                                                    Padding="12,0">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="&#x1F9EA;" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="Test All Rules" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#FFE0B2"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Column="1" Background="#FAFAFA">
            <Grid>
                <!-- Page containers (we use visibility instead of Frame for simplicity) -->
                <pages:HomePage x:Name="HomePageControl" Visibility="Visible"/>
                <pages:RulesPage x:Name="RulesPageControl" Visibility="Collapsed"/>
                <pages:SettingsPage x:Name="SettingsPageControl" Visibility="Collapsed"/>
                <pages:DocsPage x:Name="DocsPageControl" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Window>
