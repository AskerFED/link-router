<Window x:Class="BrowserSelector.RulesManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage URL Rules" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="URL Pattern Rules" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Rules List -->
        <DataGrid Grid.Row="1"
                  x:Name="RulesDataGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  Background="White"
                  BorderBrush="#DDD"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalGridLinesBrush="#EEE"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="URL Pattern" 
                                    Binding="{Binding Pattern}" 
                                    Width="*"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Browser" 
                                    Binding="{Binding BrowserName}" 
                                    Width="150"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Profile" 
                                    Binding="{Binding ProfileName}" 
                                    Width="150"
                                    IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Actions" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Edit" 
                                        Click="EditButton_Click"
                                        Tag="{Binding Id}"
                                        Margin="0,0,5,0"
                                        Padding="10,3"
                                        Background="#E3F2FD"
                                        BorderBrush="#90CAF9"
                                        Cursor="Hand"/>
                                <Button Content="Delete" 
                                        Click="DeleteButton_Click"
                                        Tag="{Binding Id}"
                                        Padding="10,3"
                                        Background="#FFEBEE"
                                        BorderBrush="#EF9A9A"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Clear All Rules"
                    Click="ClearAllButton_Click"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FFEBEE"
                    Foreground="#D32F2F"
                    BorderThickness="1"
                    BorderBrush="#EF9A9A"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>

            <Button Content="Close"
                    Click="CloseButton_Click"
                    Width="100"
                    Height="35"
                    Background="#0078D4"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Padding="10,5">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>