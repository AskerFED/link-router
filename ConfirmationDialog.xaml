<Window x:Class="BrowserSelector.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Confirm"
        WindowState="Maximized"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <!-- Backdrop overlay -->
        <Border Background="#40000000" MouseLeftButtonDown="Backdrop_Click"/>

        <!-- Dialog box -->
        <Border Background="#FFFFFF"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                CornerRadius="6"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MinWidth="360"
                MaxWidth="450">
            <Border.Effect>
                <DropShadowEffect BlurRadius="32" ShadowDepth="4" Opacity="0.25" Direction="270"/>
            </Border.Effect>

            <Grid Margin="24,20,24,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock x:Name="TitleText"
                           Grid.Row="0"
                           Text="Confirm"
                           Style="{StaticResource Subtitle1TextStyle}"
                           Margin="0,0,0,8"/>

                <!-- Message -->
                <TextBlock x:Name="MessageText"
                           Grid.Row="1"
                           Text="Are you sure?"
                           Style="{StaticResource BodyTextStyle}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button x:Name="NoButton"
                            Content="Cancel"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="No_Click"
                            MinWidth="80"
                            Margin="0,0,8,0"/>
                    <Button x:Name="YesButton"
                            Content="Yes"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="Yes_Click"
                            MinWidth="80"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
