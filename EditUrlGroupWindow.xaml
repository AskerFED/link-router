<Window x:Class="BrowserSelector.EditUrlGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:BrowserSelector.Controls"
        Title="Edit URL Group" Height="600" Width="550"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BrowserSelector;component/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>      <!-- Scrollable content -->
            <RowDefinition Height="Auto"/>   <!-- Fixed buttons -->
        </Grid.RowDefinitions>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="24,24,24,0">
            <StackPanel>
                <!-- Header -->
                <TextBlock x:Name="HeaderText" Text="New URL Group" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

                <!-- Group Name -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Group Name:" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6"/>
                    <TextBox x:Name="GroupNameTextBox" Padding="10" Height="38" FontSize="13" BorderBrush="#CCC"/>
                </StackPanel>

                <!-- Description -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Description (optional):" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6"/>
                    <TextBox x:Name="DescriptionTextBox" Padding="10" Height="60" FontSize="13" BorderBrush="#CCC"
                             TextWrapping="Wrap" AcceptsReturn="True" VerticalContentAlignment="Top"/>
                </StackPanel>

                <!-- URL Patterns Section -->
                <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="URL Patterns" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock Text="Add domain patterns that will match this group"
                                   FontSize="11" Foreground="#666" Margin="0,0,0,12"/>

                        <!-- Add Pattern Input -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="NewPatternTextBox" Grid.Column="0"
                                     Padding="10" Height="36" FontSize="13" BorderBrush="#CCC"
                                     Margin="0,0,10,0" KeyDown="NewPatternTextBox_KeyDown"/>
                            <Button Grid.Column="1" Content="+ Add" Click="AddPattern_Click"
                                    Background="#0078D4" Foreground="White" Padding="15,8"
                                    BorderThickness="0" Cursor="Hand" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#106EBE"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Patterns List -->
                        <Border Background="#F8F8F8" BorderBrush="#EEE" BorderThickness="1" CornerRadius="4" MaxHeight="120">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="5">
                                <ItemsControl x:Name="PatternsItemsControl">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="White" CornerRadius="3" Padding="10,6" Margin="0,0,0,4"
                                                    BorderBrush="#DDD" BorderThickness="1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding}" FontSize="12" VerticalAlignment="Center"/>
                                                    <Button Grid.Column="1" Content="X" Tag="{Binding}" Click="RemovePattern_Click"
                                                            Width="24" Height="24" Background="#FFEBEE" Foreground="#D32F2F"
                                                            BorderThickness="0" Cursor="Hand" FontWeight="Bold">
                                                        <Button.Template>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="3">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter TargetName="Border" Property="Background" Value="#FFCDD2"/>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Button.Template>
                                                    </Button>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>
                        <TextBlock x:Name="PatternCountText" Text="0 patterns" FontSize="11" Foreground="#666" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Browser/Profile Selection (reusable component) -->
                <Border Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Browser/Profile" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                        <TextBlock Text="Select which browser(s) to use when URLs match this group"
                                   FontSize="11" Foreground="#666" Margin="0,0,0,12"/>
                        <controls:BrowserProfileMultiSelector x:Name="ProfileSelector"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Fixed Buttons at Bottom -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="24,16,24,24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="Save_Click" Width="100" Height="40" Margin="0,0,12,0"
                        Background="#4CAF50" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#45A049"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="Cancel" Click="Cancel_Click" Width="100" Height="40"
                        Background="#9E9E9E" Foreground="White" BorderThickness="0" FontWeight="Bold" FontSize="14" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="#757575"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
