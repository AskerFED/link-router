<Window x:Class="BrowserSelector.RuleProfilePickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrowserSelector"
        mc:Ignorable="d"
        Title="Select Profile" Height="450" Width="480"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3"
        Topmost="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- URL Display -->
        <Border Grid.Row="0"
                Background="#FFFFFF"
                BorderBrush="#E4E4E4"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,12">
            <TextBlock x:Name="UrlTextBlock"
                       TextWrapping="Wrap"
                       Style="{StaticResource CaptionTextStyle}"/>
        </Border>

        <!-- Matched Rule Info -->
        <Border Grid.Row="1" Style="{StaticResource InfoBannerStyle}" Padding="8" Margin="0,0,0,4">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="8" Height="8" Fill="#0078D4" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock x:Name="MatchedRuleTextBlock"
                           Style="{StaticResource BodyTextStyle}"
                           VerticalAlignment="Center">
                    <Run Text="Matched Rule:" FontWeight="SemiBold"/>
                    <Run x:Name="RulePatternRun"/>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Section Title -->
        <TextBlock Grid.Row="2"
                   Text="Select Profile"
                   Style="{StaticResource CaptionTextStyle}"
                   FontWeight="SemiBold"
                   Margin="0,8,0,6"/>

        <!-- Profile List -->
        <Border Grid.Row="3"
                Background="#FFFFFF"
                BorderBrush="#E4E4E4"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                <ItemsControl x:Name="ProfilesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border x:Name="ProfileBorder"
                                    Background="#FFFFFF"
                                    BorderBrush="#E4E4E4"
                                    BorderThickness="1"
                                    CornerRadius="4"
                                    Padding="10"
                                    Margin="0,0,0,4"
                                    Cursor="Hand"
                                    MouseLeftButtonUp="Profile_Click"
                                    Tag="{Binding}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F0F6FC"/>
                                                <Setter Property="BorderBrush" Value="#0078D4"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Browser Icon with Fallback -->
                                    <Grid Grid.Column="0" Width="16" Height="16" Margin="0,0,12,0" VerticalAlignment="Center">
                                        <Image Source="{Binding BrowserIcon}" Width="16" Height="16"
                                               Visibility="{Binding BrowserIcon, Converter={StaticResource NullToCollapsedConverter}}"
                                               RenderOptions.BitmapScalingMode="HighQuality"/>
                                        <Ellipse Width="10" Height="10" Fill="{Binding BrowserColor}"
                                                 Visibility="{Binding BrowserIcon, Converter={StaticResource NullToVisibleConverter}}"/>
                                    </Grid>

                                    <!-- Profile Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   Style="{StaticResource BodyStrongTextStyle}"/>
                                        <TextBlock Text="{Binding BrowserProfileDescription}"
                                                   Style="{StaticResource CaptionTextStyle}"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Click="Cancel_Click"
                    Width="100"/>
        </StackPanel>
    </Grid>
</Window>
