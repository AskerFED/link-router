<Application x:Class="BrowserSelector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:BrowserSelector.Converters"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Colors.xaml"/>
                <ResourceDictionary Source="/LinkRouter;component/Themes/Windows11Theme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:NullToCollapsedConverter x:Key="NullToCollapsedConverter"/>
            <converters:NullToVisibleConverter x:Key="NullToVisibleConverter"/>
            <converters:BrowserPathToIconConverter x:Key="BrowserPathToIconConverter"/>
            <converters:BrowserNameToColorConverter x:Key="BrowserNameToColorConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter"/>
            <converters:StringNullOrEmptyToCollapsedConverter x:Key="StringNullOrEmptyToCollapsedConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>