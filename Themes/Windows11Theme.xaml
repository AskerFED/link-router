    <Style x:Key="BadgeStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource NeutralBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Padding" Value="6,2"/>
