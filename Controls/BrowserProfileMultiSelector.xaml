<UserControl x:Class="BrowserSelector.Controls.BrowserProfileMultiSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ProfileSelector">

    <UserControl.Resources>
        <!-- Link Button Style -->
        <Style x:Key="LinkButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <TextBlock Text="{TemplateBinding Content}"
                                   Foreground="{TemplateBinding Foreground}"
                                   TextDecorations="Underline"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#106EBE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Edit Icon Button Style -->
        <Style x:Key="EditIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <Path Data="M12,2 L14,4 L5,13 L2,14 L3,11 L12,2 Z M11,4 L13,6"
                                  Stroke="{TemplateBinding Foreground}"
                                  StrokeThickness="1.2"
                                  Width="14" Height="14"
                                  Stretch="Uniform"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                <Setter Property="Foreground" Value="#1976D2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Remove Button Style -->
        <Style x:Key="RemoveButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#FFEBEE"/>
            <Setter Property="Foreground" Value="#D32F2F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#FFCDD2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <!-- Simple Mode Panel (Browser + Profile Selection) -->
        <StackPanel x:Name="SimpleModePanel">
            <!-- Browser Selection -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Browser:" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6"/>
                <ComboBox x:Name="BrowserComboBox" Height="40" SelectionChanged="BrowserComboBox_SelectionChanged"
                          Background="White" BorderBrush="#CCC" Padding="10,5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <Ellipse Width="14" Height="14" Fill="{Binding Color}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" FontSize="13" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Profile Selection -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Profile:" FontWeight="SemiBold" FontSize="13" Margin="0,0,0,6"/>
                <ComboBox x:Name="ProfileComboBox" Height="40" Background="White" BorderBrush="#CCC" Padding="10,5"
                          SelectionChanged="ProfileComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                <TextBlock Text="{Binding Path}" FontSize="10" Foreground="#666" TextWrapping="Wrap" Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

            <!-- Advanced Pick Link with Info Icon -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button x:Name="AdvancedPickButton"
                        Content="+ Show picker on match"
                        Click="AdvancedPick_Click"
                        Style="{StaticResource LinkButtonStyle}"/>
                <TextBlock Text="ℹ" FontSize="12" Foreground="#888" Margin="6,0,0,0"
                           VerticalAlignment="Center" Cursor="Help"
                           ToolTip="Add multiple browser/profile options to choose from"/>
            </StackPanel>
        </StackPanel>

        <!-- Advanced Mode Panel (Profiles List) - hidden by default -->
        <StackPanel x:Name="AdvancedModePanel" Visibility="Collapsed">
            <Border Background="#F0F8FF" BorderBrush="#B8D4E8" BorderThickness="1"
                    CornerRadius="4" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <!-- Header with Add Button -->
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Profiles:" FontWeight="Bold" FontSize="12" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Content="+ Add" Click="AddProfileButton_Click"
                                Style="{StaticResource AddButtonStyle}"/>
                    </Grid>

                    <!-- Profiles List -->
                    <ItemsControl x:Name="ProfilesList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" BorderBrush="#DDD" BorderThickness="1"
                                        CornerRadius="4" Padding="12,10" Margin="0,0,0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Profile Info -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold" FontSize="13"/>
                                            <TextBlock Text="{Binding BrowserProfileDescription}" FontSize="11" Foreground="#666" Margin="0,3,0,0"/>
                                        </StackPanel>

                                        <!-- Edit Button -->
                                        <Button Grid.Column="1"
                                                Tag="{Binding Id}"
                                                Click="EditProfile_Click"
                                                Margin="8,0,6,0"
                                                ToolTip="Edit"
                                                Style="{StaticResource EditIconButtonStyle}"/>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="2" Content="X"
                                                Tag="{Binding Id}"
                                                Click="RemoveProfile_Click"
                                                ToolTip="Remove"
                                                Style="{StaticResource RemoveButtonStyle}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Multi-profile hint -->
                    <TextBlock x:Name="MultiProfileHint"
                               Text="When matched, you'll be shown a picker to choose which profile to use."
                               FontSize="11" Foreground="#666" FontStyle="Italic"
                               TextWrapping="Wrap" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Switch to Simple Link with Info Icon -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <Button Content="&#8592; Auto-open directly"
                        Click="SwitchToSimple_Click"
                        Style="{StaticResource LinkButtonStyle}"/>
                <TextBlock Text="ℹ" FontSize="12" Foreground="#888" Margin="6,0,0,0"
                           VerticalAlignment="Center" Cursor="Help"
                           ToolTip="Use a single browser/profile that opens automatically"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
