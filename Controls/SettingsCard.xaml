<UserControl x:Class="BrowserSelector.Controls.SettingsCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <Border x:Name="CardBorder"
            Background="{Binding CardBackground, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#FFFFFF}"
            BorderBrush="{Binding CardBorderBrush, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#E4E4E4}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="16"
            Margin="0,0,0,4"
            Cursor="{Binding CardCursor, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon Area -->
            <Border x:Name="IconBorder"
                    Grid.Column="0"
                    Width="36"
                    Height="36"
                    Background="#F3F3F3"
                    CornerRadius="4"
                    Margin="0,0,16,0"
                    Visibility="{Binding IconVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
                <ContentPresenter Content="{Binding Icon, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
            </Border>

            <!-- Header and Description -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="HeaderText"
                           Text="{Binding Header, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontFamily="Segoe UI, Arial"
                           FontSize="14"
                           Foreground="#1A1A1A"
                           TextWrapping="Wrap"/>
                <TextBlock x:Name="DescriptionText"
                           Text="{Binding Description, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontFamily="Segoe UI, Arial"
                           FontSize="12"
                           Foreground="#5D5D5D"
                           TextWrapping="Wrap"
                           Margin="0,2,0,0"
                           Visibility="{Binding DescriptionVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </StackPanel>

            <!-- Action Content Area -->
            <ContentPresenter Grid.Column="2"
                              Content="{Binding ActionContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              VerticalAlignment="Center"
                              Margin="16,0,0,0"/>
        </Grid>
    </Border>
</UserControl>
