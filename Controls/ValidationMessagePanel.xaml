<UserControl x:Class="BrowserSelector.Controls.ValidationMessagePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Validation Icon Geometries -->
        <Geometry x:Key="ErrorIconGeometry">M10,2 A8,8 0 1,1 10,18 A8,8 0 1,1 10,2 M10,6 L10,11 M10,13 L10,15</Geometry>
        <Geometry x:Key="WarningIconGeometry">M10,2 L18,16 L2,16 Z M10,7 L10,11 M10,13 L10,14</Geometry>
        <Geometry x:Key="InfoIconGeometry">M10,2 A8,8 0 1,1 10,18 A8,8 0 1,1 10,2 M10,6 L10,7 M10,9 L10,14</Geometry>
    </UserControl.Resources>

    <StackPanel x:Name="MessagesContainer" Visibility="Collapsed">
        <!-- Error Messages -->
        <ItemsControl x:Name="ErrorsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FFF2F2"
                            BorderBrush="#DC3545"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="{StaticResource ErrorIconGeometry}"
                                  Stroke="#DC3545"
                                  StrokeThickness="1.5"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  VerticalAlignment="Top"
                                  Margin="0,2,10,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Message}"
                                           FontFamily="Segoe UI"
                                           FontSize="13"
                                           Foreground="#DC3545"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Details}"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           Foreground="#DC3545"
                                           Opacity="0.8"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Details}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Details}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Warning Messages -->
        <ItemsControl x:Name="WarningsControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#FFF8E6"
                            BorderBrush="#F0A500"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="{StaticResource WarningIconGeometry}"
                                  Stroke="#B37400"
                                  StrokeThickness="1.5"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  VerticalAlignment="Top"
                                  Margin="0,2,10,0"/>
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Message}"
                                           FontFamily="Segoe UI"
                                           FontSize="13"
                                           Foreground="#8A5A00"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Details}"
                                           FontFamily="Segoe UI"
                                           FontSize="12"
                                           Foreground="#8A5A00"
                                           Opacity="0.8"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Details}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Details}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Info Messages -->
        <ItemsControl x:Name="InfosControl">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="#E8F4FD"
                            BorderBrush="#0078D4"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Path Data="{StaticResource InfoIconGeometry}"
                                  Stroke="#0078D4"
                                  StrokeThickness="1.5"
                                  Width="16" Height="16"
                                  Stretch="Uniform"
                                  VerticalAlignment="Top"
                                  Margin="0,2,10,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Message}"
                                       FontFamily="Segoe UI"
                                       FontSize="13"
                                       Foreground="#005A9E"
                                       TextWrapping="Wrap"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
